<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{
  title:"Home"
}) %>
<body>
    <%- include('./partials/header') %>

    <main class="index__main">
        <!-- Sección oferta -->
        <section class="index__main__section--banner">
          <div class="swiper bannerSwiper">
            <div class="swiper-wrapper">

              <% banner.forEach(banner => { %>
                <div class="swiper-slide">
                  <div class="img-banner-box">
                    <a href="<%= banner.URL %>"><img src="/images/banners/<%= banner.image || 'default-banner.svg' %>" alt="<%= banner.name %>"></a>
                  </div>
                </div>
              <% }) %>

            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
            <div class="autoplay-progress">
            <svg viewBox="0 0 48 48">
            <circle cx="24" cy="24" r="20"></circle>
            </svg>
            <span></span>
          </div>
          </div>
        </section>
        <!-- Carrusel - Productos destacados -->
        <section class="index__main__section--products">
            <div class="swiper productsSwiper">
                <div class="swiper-wrapper">
                  
                  <% products.forEach(product => { %>
                  
                    <%- include('./partials/product-card',{
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    mainImage: product.mainImage,
                    offer: product.offer,
                    discount: product.discount
                    
                    }) %>
                  <% }) %>
                  
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
              </div>
              </div>
        </section>

        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Ofertas</h2>
            </div>
        <% products.forEach(product => { %>
          <%- include('./partials/cardProduct-grid',{product}) %>
        <% }) %>
      </div>
    </div>

        <!-- Categorías destacadas -->
        <section class="index__main__section--categories">
          <article class="index__main__section__article--category">
            <a href="/productos/buscar?keyword=picador">
            <img class="index__main__section__article--category--image" src="/images/Category-1.png" />
            <h4 class="index__main__section__article--category--name">Picadores</h4>
          </a>
          </article>
          <article class="index__main__section__article--category">
            <a href="/productos/buscar?keyword=mate">
            <img class="index__main__section__article--category--image" src="/images/Category-2.png" />
            <h4 class="index__main__section__article--category--name">Mates</h4>
          </a>
          </article>
          <article class="index__main__section__article--category">
            <a href="/productos/buscar?keyword=figura">
            <img class="index__main__section__article--category--image" src="/images/Category-3.png" />
            <h4 class="index__main__section__article--category--name">Figuras</h4>
          </a>
          </article>
          <article class="index__main__section__article--category">
            <a href="/productos/buscar?keyword=mascara">
            <img class="index__main__section__article--category--image" src="/images/Category-4.png" />
            <h4 class="index__main__section__article--category--name">Máscaras</h4>
          </article>
        </a>
          <article class="index__main__section__article--category">
            <a href="/productos/buscar?keyword=llavero">
                <img class="index__main__section__article--category--image" src="/images/Category-5.png" />
                <h4 class="index__main__section__article--category--name">Llaveros</h4>
            </a>
        </article>
        </section>
    </main>
    

    <%- include('./partials/footer') %>

    <%- include('./partials/scripts') %>
    <script src="/javascripts/swiperProducts.js"></script>
    <script src="/javascripts/swiperBanner.js"></script>
</body>
</html>